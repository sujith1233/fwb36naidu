extends layout

block content
  h1= title
  - const hill = ['hill_type','size','age']
  - let results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each results, index in hill
        div(class='col-sm-2' onclick='buy('+index+')') #{results}